.banner {
  position: relative;
  overflow: hidden;
  height: 100px;
  width: 350px;
  margin: 50px auto;
}

.banner__swiper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.banner__swiper-img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 5px;
}


.banner__dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5px;
  height: 4px;
  text-align: center;
  font-size: 0;
  z-index: 1;
  composes: banner;
}

.banner__dot {
  display: inline-block;
  margin: 0 2px;
  width: 4px;
  height: 4px;
  border-radius: 4px;
  opacity: 0.5;
  background: #FFF;
  transition: all 0.2s;
}

.banner__dot--cur {
  width: 16px;
  background: #FFF;
  opacity: 1;
}

.otherBanner {
  background-color: gray;
}

.numberSplit {
  font-size: 24rpx;
}